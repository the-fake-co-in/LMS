@model LMS.Models.UserDetail
@{
   ViewBag.Title = "Index";
}
<center>
   <h2>User Master</h2>
</center>
<div class="p-2">
   <a class="btn btn-success" style="margin-bottom:10px" onclick="PopupForm('@Url.Action("InsertOrUpdate")/0', 'User Master',450)">
      <i class="fa fa-plus"></i>  Add New</a>
   @{ Html.RenderPartial("_FilterData"); }
   <table id="UserTable" class="table table-striped table-bordered" style="width: 100%">
      <thead>
         <tr>
            <th>UserId</th>
            <th>UserName</th>
            <th>Email</th>
            <th>RoleId</th>
            <th>FailAttempt</th>
            <th>IsBlocked</th>
            <th>IsDeleted</th>
            <th>FirstName</th>
            <th>MiddleName</th>
            <th>LastName</th>
            <th>Gender</th>
            <th>DateOfBirth</th>
            <th>MobileNo</th>
            <th>HomeContactNo</th>
            <th>Address1</th>
            <th>Address2</th>
            <th>City</th>
            <th>State</th>
            <th>Country</th>
            <th>Pincode</th>
            <th>DateOfJoin</th>
            <th>Password</th>
            <th>BlockReason</th>
            <th>LastLoginDate</th>
            <th>LastLogoutDate</th>
            <th>CreatedBy</th>
            <th>CreatedOn</th>
            <th>ModifiedBy</th>
            <th>ModifiedOn</th>
            <th>Control</th>
         </tr>
      </thead>
   </table>
</div>
@section scripts {
   @Scripts.Render("~/bundles/DataTables")
   <script src="../../Content/LMSCustom/LMSCommon.js" type="text/javascript"></script>
   <script type="text/javascript">
      $(document).ready(function () {
         bindDatatable(0);
      });

      $('#filterRecord').find('input').change(function() {
         bindDatatable(this.value)
      });

      function bindDatatable(displayRecords)
      {
         debugger;

         if($('#UserTable'))
         {
            $('#UserTable').dataTable({
               "bDestroy": true
            }).fnDestroy();
         }

         var editUrl = '@Url.Action("InsertOrUpdate")/';
         var deleteUrl = '@Url.Action("InsertUpdateOrDelete")';

         dataTable =  $("#UserTable").DataTable({
            "ajax": {
               "url": "/User/GetData/",
               "data": { "displayRecords" : displayRecords },
               "type": "GET",
               "datatype": "json"
            },
            "columns": [
               { "data": "UserId" },
               { "data": "UserName" },
               { "data": "Email" },
               { "data": "RoleId" },
               { "data": "FailAttempt" },
               { "data": "IsBlocked" },
               { "data": "IsDeleted" },
               { "data": "FirstName" },
               { "data": "MiddleName" },
               { "data": "LastName" },
               { "data": "Gender" },
               { "data": "DateOfBirth" },
               { "data": "MobileNo" },
               { "data": "HomeContactNo" },
               { "data": "Address1" },
               { "data": "Address2" },
               { "data": "City" },
               { "data": "State" },
               { "data": "Country" },
               { "data": "Pincode" },
               { "data": "DateOfJoin" },
               { "data": "Password" },
               { "data": "BlockReason" },
               { "data": "LastLoginDate" },
               { "data": "LastLogoutDate" },
               { "data": "CreatedBy" },
               { "data": "CreatedOn" },
               { "data": "ModifiedBy" },
               { "data": "ModifiedOn" },
               { "data": "Id" ,
               "render" : function (data, IsDeleted) {
                  return "<a class='btn btn-primary btn-sm" + (data.IsDeleted ? " disabled" : "") + "' onclick=PopupForm('" + editUrl + data + "','User',450)>"
                  + " <i class='fa fa-pencil'></i> Edit</a>"
                  + " <a class='btn btn-danger btn-sm' style='margin-left:5px' onclick=Delete(" + data + ",'User','" + deleteUrl + "')>"
                  + " <i class='fa fa-trash'></i> Delete</a>";
               },
                  "orderable": false,
                  "searchable":true,
               }
            ],
            "language": {
               "emptyTable" : "No Users found, Please click on <b>Add New</b> Button",  
               "processing" : "<i class='fa fa-spinner fa-spin fa-3x fa-fw' style='color:#2a2b2b;'></i><span class='sr-only'>Loading...</span>" 
            }
         });
      };
   </script>
}
