@model LMS.Models.ChangePassword
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("ChangePassword", "Login", FormMethod.Post, new { }))
{
       @Html.ValidationSummary(true)

   <div id="login-modal" class="modal fade">
      <div class="modal-dialog modal-sm">
         <center>
            <div class="modal-content">
               @Html.ValidationSummary(true)
               <center>
                  <img id="user-image" src="../../Content/Images/Login.png" class="card-img-top mb-3" />
               </center>
               <label class="error-msg">@Html.DisplayFor(model => model.ChangePwdErrMsg)</label>
               
               <div id="div-login">
                  @*@Html.ValidationMessageFor(x => x.LoginErrorMessage)*@
                  @*-------------- INPUT SECTION ---------------*@
                  <div class="input-group mb-2">
                     <div class="input-group-prepend">
                        <span class="input-group-text">&#128100;</span>
                    </div>
                    @Html.TextBoxFor(model => model.UserName, new { @id = "username", @class = "form-control", @placeholder="UserName" })
                  </div>
                  <div class="mb-2">
                     @Html.ValidationMessageFor(x => x.UserName)
                  </div>
                  <div class="input-group mb-2">
                     <div class="input-group-prepend">
                        <span class="input-group-text">&#128100;</span>
                    </div>
                    @Html.TextBoxFor(model => model.OTP, new { @id = "OTP", @class = "form-control", @placeholder="OTP" })
                  </div>
                  <div class="mb-2">
                     @Html.ValidationMessageFor(x => x.OTP)
                  </div>
                  <div class="input-group mb-2">
                     <div class="input-group-prepend">
                        <span class="input-group-text">&#128274;</span>
                     </div>
                     @Html.PasswordFor(model => model.Password, new { @id = "password", @type = "password", @class = "form-control", @placeholder = "Password" })
                  </div>
                  <div class="input-group mb-2">
                     <div class="input-group-prepend">
                        <span class="input-group-text">&#128274;</span>
                     </div>
                     @Html.PasswordFor(model => model.ConfirmPassword, new { @id = "ConfirmPassword", @type = "password", @class = "form-control", @placeholder = "ConfirmPassword" })
                  </div>
                  <div class="mb-2">
                     @Html.ValidationMessageFor(x => x.ConfirmPassword)
                  </div>
                  @*--------------- CONTROL BUTTONS -----------------*@
                  <div class="btn-group">
                     <button id="ChangePassword" type="submit" value="ChangePassword" class="btn btn-primary btn-sm ">
                        <i class="fa fa-key"></i> Change Password
                     </button>
                  </div>
                  <div class="btn-group">
                     <button id="close-modal" type="reset" value="Close" class="btn btn-danger btn-sm control-btn">
                        <i class="fa fa-close"></i> Close
                     </button>
                  </div>
                  @*-------------- CONTROL SECTION ---------------*@
               </div>
            </div>
         </center>
      </div>
   </div>
}