@model LMS.Models.Login
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Login", "Login", FormMethod.Post, new { }))
{
   @*@Html.AntiForgeryToken()*@
  
   <div id="login-modal" class="modal fade">
      <div class="modal-dialog modal-sm">
         <center>
            <div class="modal-content">
               @Html.ValidationSummary(true)
               <center class="mb-2">
                  <img id="user-image" src="../../Content/Images/Login.png" class="card-img-top" />
               </center>
               <label class="error-msg">
               @Html.DisplayFor(model => model.LoginErrorMessage)</label>
               
               @*--------------------------------------------
               LOGIN SECTION
               --------------------------------------------*@
               <div id="div-login">
                  @*@Html.ValidationMessageFor(x => x.LoginErrorMessage)*@
                  @*-------------- INPUT SECTION ---------------*@
                  <div class="input-group">
                    <div class="input-group-prepend">
                     <span class="input-group-text">&#128100;</span>
                    </div>
                     @Html.TextBoxFor(model => model.UserName, new { @id = "username", @class = "form-control", @placeholder="UserName" })
                  </div>
                  <div>
                     @Html.ValidationMessageFor(x => x.UserName)
                  </div>
                  <div class="input-group mt-2">
                     <div class="input-group-prepend">
                        <span class="input-group-text">&#128274;</span>
                     </div>
                     @Html.PasswordFor(model => model.Password, new { @id = "password", @type = "password", @class = "form-control", @placeholder = "Password" })
                  </div>
                  <div>
                     @Html.ValidationMessageFor(x => x.Password)
                  </div>
                  @*--------------- CONTROL BUTTONS -----------------*@
                  <div class="btn-group mt-3">
                     <button id="Login" type="submit" value="Login" class="btn btn-primary btn-sm control-btn">
                        <i class="fa fa-user"></i> Login
                     </button>
                  </div>
                  <div class="btn-group mt-3">
                     <button id="close-modal" type="reset" value="Close" class="btn btn-danger btn-sm control-btn">
                        <i class="fa fa-close"></i> Close
                     </button>
                  </div>
                  <div class="mt-2">
                     <button id="forgot-username" type="button" class="btn btn-link button-link px-0 mx-0">
                        Forgot username?</button>
                     <button id="forgot-pwd" type="button" class="btn btn-link button-link px-0 mx-0">
                        Forgot Password?</button>
                     </div>
                  @*-------------- CONTROL SECTION ---------------*@
               </div>
               @*--------------------------------------
               LOGIN SECTION
               FORGOT USERNAME SECTION
               ------------------------------------------*@
               <div id="div-forgot-username" style="display: none">
                  <div id="div-email" class="input-group">
                     <div class="input-group-prepend">
                        <div class="input-group-text">
                           &#9993;
                        </div>
                     </div>
                     @Html.TextBoxFor(model => model.Email, new { @id = "email-1", @class = "form-control", @placeholder="Email Address" })
                  </div>
                  @*-------------- INPUT SECTION ---------------*@ @*-------------- CONTROL SECTION ---------------*@
                  <div class="btn-group mt-3">
                     <button id="send-email-1" type="button" value="Send e-mail" class="btn btn-success btn-sm control-btn">
                        &#9993; Send Email
                     </button>
                  </div>
                  <div class="btn-group mt-3">
                     <button id="close-modal-1" value="Close" class="btn btn-danger btn-sm control-btn">
                        <i class="fa fa-close"></i> Close
                     </button>
                  </div>
                  <div class="btn-group mt-3">
                     <button id="goto-login-1" value="Go to Login" class="btn btn-primary btn-sm">
                        &#8635; Go to Login
                     </button>
                  </div>
                  @*-------------- CONTROL SECTION ---------------*@
               </div>
               @*---------------------------------------------
               FORGOT USERNAME SECTION 
               FORGOT PASSWORD SECTION
               ------------------------------------------*@
               <div id="div-forgot-pwd" style="display: none">
                  <div id="div-username" class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text">&#128100;</span>
                    </div>
                     @Html.TextBoxFor(model => model.UserName, new { @id = "username-2", @class = "form-control", @placeholder="UserName" })
                  </div>
                  <div class="input-group mt-2">
                     <div class="input-group-prepend">
                        <span class="input-group-text">&#9993;</span>
                     </div>
                     @Html.TextBoxFor(model => model.Email, new { @id = "email-2", @class = "form-control", @placeholder = "Email Address" })
                  </div>
                  @*-------------- INPUT SECTION ---------------*@ @*-------------- CONTROL SECTION ---------------*@
                  <div class="btn-group mt-3">
                     <button id="send-email-2" type="button" value="Send e-mail" class="btn btn-success btn-sm control-btn">
                        &#9993; Send Email
                     </button>
                  </div>
                  <div class="btn-group mt-3">
                     <button id="close-modal-2" value="Close" class="btn btn-danger btn-sm control-btn">
                        <i class="fa fa-close"></i> Close
                     </button>
                  </div>
                  <div class="btn-group mt-3">
                     <button id="goto-login-2" value="Go to Login" class="btn btn-primary btn-sm" >
                        &#8635; Go to Login
                     </button>
                  </div>
                  @*-------------- CONTROL SECTION ---------------*@
               </div>
               @*---------------------------------------------
               FORGOT PASSWORD SECTION 
               ----------------------------------------------*@
            </div>
         </center>
      </div>
   </div>
}
