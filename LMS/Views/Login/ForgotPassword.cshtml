<!DOCTYPE html>
<html lang="en">
<head>
   <title>Library Management System</title>
   <!-- Bootstrap core CSS -->
   <link href="../../Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
</head>
<body style="background-color: Black">
   @model LMS.UserMaster
   @{
      ViewBag.Title = "Login - Library Management System";
      //Layout = "~/Views/Shared/HmePage.cshtml";
   }
   @using (Html.BeginForm())
   {
      @Html.AntiForgeryToken()
      @Html.ValidationSummary(true)
      // -------------- NAVIGATION BAR STARTS HERE ---------------
      <nav id="main-navbar" class="container navbar navbar-expand-sm navbar-dark bg-dark">
         @*<a class="navbar-brand" href="#">Library Management System</a>*@
         <button id="nav-button" class="navbar-toggler collapsed">
           <span class="navbar-toggler-icon"></span>
         </button>
         <div class="navbar-collapse collapse mb-3" id="NavbarMain" style="">
           <ul class="navbar-nav mr-auto mb-3">
             <li class="nav-item active">
               <a class="nav-link" href="#">Home<span class="sr-only">(current)</span></a>
             </li>
             <li class="nav-item active">
               <a class="nav-link" href="#">Contact Us</a>
             </li>
             <li class="nav-item active">
               <a class="nav-link" href="#">About Us</a>
             </li>
           </ul>
         </div>
         <div class="nav-item form-inline my-2 my-md-0">
            <a id="show-modal" class="nav-link" data-toggle="modal" data-target="#login-modal" href="#">Login</a>
         </div>
      </nav>
      // -------------- NAVIGATION BAR ENDS HERE ---------------

      // -------------- LOGIN MODAL STARTS HERE ---------------
      <div id="login-modal" class="modal fade" role="dialog" data-backdrop="static" data-keyboard="false"
         style="border: 5px; box-shadow: 1px 1px 10px #fff; border-radius: 25px;">
         <div class="modal-dialog modal-sm" style="border: 5px">
            <center>
               <div class="modal-content" style="background-color: Black">
                  @*-------------- HEADER IMAGE ---------------*@
                  <center>
                     <img src="../../Content/Images/Login.png" class="card-img-top" style="width: 144px;
                        height: 144px;" />
                  </center>
                  @*-------------- HEADER IMAGE ---------------*@
                  
                  @*-------------- VALIDATION MESSAGE ---------------*@
                  <label id="error-msg" style="color: Red; margin-top: 10px;" class="mb-3">
                  </label>
                  @*-------------- VALIDATION MESSAGE ---------------*@
                  
                  @*-------------- LOGIN SECTION ---------------*@
                  <div id="div-login">
                     @*-------------- INPUT SECTION ---------------*@
                     <div id="div-username" class="input-group mb-3" data-toggle="tooltip" data-placement="right"
                        title="Please enter UserName...">
                        <div class="input-group-prepend">
                           <div class="input-group-text">
                              UserName
                           </div>
                        </div>
                        @Html.TextBoxFor(model => model.UserName, new { @id = "username", @class = "form-control", @required = "required" })
                     </div>
                     <div id="div-password" class="input-group mb-3" data-toggle="tooltip" data-placement="right"
                        title="Please enter Password...">
                        <div class="input-group-prepend">
                           <div class="input-group-text">
                              Password
                           </div>
                        </div>
                        @Html.PasswordFor(model => model.Password, new { @id = "password", @class = "form-control", @required = "required", @type = "password" })
                     </div>
                     @*-------------- INPUT SECTION ---------------*@
                     
                     @*-------------- CONTROL SECTION ---------------*@
                     <div class="btn-group mt-3">
                        <input id="Login" value="Log-In" class="btn btn-primary btn-sm" style="padding: 5px;
                           margin-right:10px; width: 100px;" />
                        <input id="close-modal" value="Close" class="btn btn-danger btn-sm" style="padding: 5px;
                           margin-left:10px; width: 100px;" />
                     </div>
                     <div class="mb-3" style="color: White;">
                        <span>
                           <label>
                              <input type="checkbox" value="remember-me" />
                              Remember me
                           </label>
                        </span><span>
                           <button id="forgot-pwd" type="button" class="btn btn-link">
                              Forgot Password?</button>
                        </span>
                     </div>
                     @*-------------- CONTROL SECTION ---------------*@
                  </div>
                  @*--------------- LOGIN SECTION -----------------*@
                  
                  @*--------------- FORGOT PASSWORD SECTION -----------------*@
                  <div id="div-forgot-pwd" style="display:none">
                     <div id="div-email" class="input-group mb-3" data-toggle="tooltip" data-placement="right"
                        title="Please enter Email Address...">
                        <div class="input-group-prepend">
                           <div class="input-group-text">
                              E-Mail
                           </div>
                        </div>
                        @Html.TextBoxFor(model => model.Email, new { @id = "email", @class = "form-control", @required = "required" })
                     </div>
                     @*-------------- INPUT SECTION ---------------*@ @*-------------- CONTROL SECTION ---------------*@
                     <div class="btn-group mt-3">
                        <input id="send-email" value="Send e-mail" class="btn btn-success btn-sm" style="padding: 5px;
                           margin-right: 10px; width: 100px;" />
                        <input id="close-modal-2" value="Close" class="btn btn-danger btn-sm" style="padding: 5px;
                           margin-left:10px; width: 100px;" />
                     </div>
                     <input id="goto-login" value="Go to Login" class="btn btn-primary btn-sm" style="padding: 5px;
                           margin-top:10px; width: 100px;" />

                     @*-------------- CONTROL SECTION ---------------*@
                  </div>
                  @*--------------- FORGOT PASSWORD SECTION -----------------*@

                  @*--------------- SET PASSWORD SECTION -----------------*@
                  <div id="div-set-pwd" style="display:none">
                     <div id="div-password-1" class="input-group mb-3" data-toggle="tooltip" data-placement="right"
                        title="Please enter Password...">
                        <div class="input-group-prepend">
                           <div class="input-group-text">
                              Enter Password
                           </div>
                        </div>
                        @Html.TextBoxFor(model => model.Password, new { @id = "password-1", @class = "form-control", @required = "required", @type = "password" })
                     </div>
                     <div id="div-password-2" class="input-group mb-3" data-toggle="tooltip" data-placement="right"
                        title="Please confirm Password...">
                        <div class="input-group-prepend">
                           <div class="input-group-text">
                              Confirm Password
                           </div>
                        </div>
                        @Html.PasswordFor(model => model.Password, new { @id = "password-2", @class = "form-control", @required = "required", @type = "password" })
                     </div>
                     @*-------------- INPUT SECTION ---------------*@
                     
                     @*-------------- CONTROL SECTION ---------------*@
                     <div class="btn-group mt-3">
                        <input id="set-pwd" value="Set Password" class="btn btn-primary btn-sm" style="padding: 5px;
                           margin-right:10px; width: 100px;" />
                        <input id="close-modal-3" value="Close" class="btn btn-danger btn-sm" style="padding: 5px;
                           margin-left:10px; width: 100px;" />
                     </div>
                     <input id="goto-login-2" value="Go To Login" class="btn btn-primary btn-sm" style="padding: 5px;
                        margin-left:10px; width: 100px;" />
                     @*-------------- CONTROL SECTION ---------------*@
                  </div>
               </div>
            </center>
         </div>
      </div>
   }
   <!-- jQuery -->
   <script src="../../Scripts/jquery-3.5.1.js" type="text/javascript"></script>
   <!-- Bootstrap tooltips -->
   <script src="../../Scripts/bootstrap.bundle.js" type="text/javascript"></script>
   <!-- Login Script -->
   <script src="../../Content/Login/Login.js" type="text/javascript"></script>
</body>
</html>
