@model LMS.Models.FormTypeMaster
@{
    Layout = null;
    ViewBag.Title = "Add FormType";
}

@using (Html.BeginForm("InsertUpdateOrDelete", "FormTypeMaster", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
   @Html.HiddenFor(model => model.Id)
   <div class="form-group">
      @Html.LabelFor(model => model.Type, new { @class = "control-label" })
      @Html.EditorFor(model => model.Type, new { @class = "form-control" })
      @Html.ValidationMessageFor(model => model.Type)
   </div>
   <div class="form-group">
      @Html.LabelFor(model => model.DisplayOrder, new { @class = "control-label" })
      @Html.EditorFor(model => model.DisplayOrder, new { @class = "form-control" })
      @Html.ValidationMessageFor(model => model.DisplayOrder)
   </div>
   <hr class="mb-2 mt-0"/>
   <div class="form-group float-right m-0">
      <button type="submit" class="btn btn-primary">Save changes</button>
      <button type="reset" class="btn btn-secondary">Reset</button>
      <button type="button" class="btn btn-danger" onclick="closeJQryDlg()">Close</button>
   </div>

   @section Scripts {
      @Scripts.Render("~/bundles/jqueryModal")
   }
}