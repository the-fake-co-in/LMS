@model LMS.Models.Login

@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { }))
{
   @Html.AntiForgeryToken()
   <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
         <li data-target="#myCarousel" data-slide-to="0" class="active" />
         <li data-target="#myCarousel" data-slide-to="1" />
         <li data-target="#myCarousel" data-slide-to="2" />
         <li data-target="#myCarousel" data-slide-to="3" />
         <li data-target="#myCarousel" data-slide-to="4" />
      </ol>
      <div class="carousel-inner">
         <div class="carousel-item active">
            <img src="../../Content/Images/Header-1.jpg" class="d-flex justify-content-center" />
            <div class="container">
               <div class="carousel-caption">
                  <p class="carousel-quote">
                     "The only thing that you absolutely have to know, is the location of the library."</p>
                  <p class="carousel-author">
                     - Albert Einstein</p>
               </div>
            </div>
         </div>
         <div class="carousel-item">
            <img src="../../Content/Images/Header-2.jpg" class="d-flex justify-content-center" />
            <div class="container">
               <div class="carousel-caption">
                  <p class="carousel-quote">
                     "Libraries store the energy that fuels the imagination. They open up windows to
                     the world and inspire us to explore and achieve, and contribute to improving our
                     quality of life."</p>
                  <p class="carousel-author">
                     - Sidney Sheldon</p>
                  <p />
               </div>
            </div>
         </div>
         <div class="carousel-item">
            <img src="../../Content/Images/Header-3.jpg" class="d-flex justify-content-center" />
            <div class="container">
               <div class="carousel-caption">
                  <p class="carousel-quote">
                     "Everything you need for better future and success has already been written. And
                     guess what? All you have to do is go to the library."</p>
                  <p class="carousel-author">
                     – Henri Frederic Amiel</p>
               </div>
            </div>
         </div>
         <div class="carousel-item">
            <img src="../../Content/Images/Header-4.jpg" class="d-flex justify-content-center" />
            <div class="container">
               <div class="carousel-caption">
                  <p class="carousel-quote">
                     "To ask why we need libraries at all, when there is so much information available
                     elsewhere, is about as sensible as asking if roadmaps are necessary now that there
                     are so very many roads."</p>
                  <p class="carousel-author">
                     - Jon Bing</p>
               </div>
            </div>
         </div>
         <div class="carousel-item">
            <img src="../../Content/Images/Header-5.jpg" class="d-flex justify-content-center" />
            <div class="container">
               <div class="carousel-caption">
                  <p class="carousel-quote">
                     Whatever the cost of our libraries, the price is cheap compared to that of an ignorant
                     nation. Walter Cronkite</p>
                  <p class="carousel-author">
                     Walter Cronkite</p>
               </div>
            </div>
         </div>
      </div>
      <!-- Left and right controls -->
      <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
         <span class="carousel-control-prev-icon" aria-hidden="true" /><span class="sr-only">
            Previous</span> </a><a class="carousel-control-next" href="#myCarousel" role="button"
               data-slide="next"><span class="carousel-control-next-icon" aria-hidden="true" />
               <span class="sr-only">Next</span> </a>
   </div>

   <div id="login-modal" class="modal fade">
      <div class="modal-dialog modal-sm">
         <center>
            <div class="modal-content">
               @Html.ValidationSummary(true)
               <center>
                  <img id="user-image" src="../../Content/Images/Login.png" class="card-img-top mb-3" />
               </center>
               @*--------------------------------------------
               LOGIN SECTION
               --------------------------------------------*@
               <div id="div-login">
                  @*-------------- INPUT SECTION ---------------*@
                  <div class="input-group mb-2">
                     <div class="input-group-prepend">
                        <span class="input-group-text">UserName</span>
                     </div>
                     @Html.TextBoxFor(model => model.UserName, new { @id = "username", @class = "form-control" })
                  </div>
                  @Html.ValidationMessageFor(x => x.UserName)
                  <div class="input-group mb-2">
                     <div class="input-group-prepend">
                        <span class="input-group-text">Password</span>
                     </div>
                     @Html.PasswordFor(model => model.Password, new { @id = "password", @type = "password", @class = "form-control" })
                  </div>
                  @Html.ValidationMessageFor(x => x.Password)
                  @*--------------- CONTROL BUTTONS -----------------*@
                  <div class="btn-group">
                     <input id="Login" value="Login" class="btn btn-primary btn-sm control-btn" readonly />
                     <input id="close-modal" type="reset" value="Close" class="btn btn-danger btn-sm control-btn" readonly />
                  </div>
                  <div style="color: DarkGreen;">
                     <span>
                        <label>
                           <input type="checkbox" value="remember-me" />
                           Remember me
                        </label>
                     </span><span>
                        <button id="forgot-pwd" type="button" class="btn btn-link">
                           Forgot Password?</button>
                     </span>
                  </div>
                  @*-------------- CONTROL SECTION ---------------*@
               </div>
               @*--------------------------------------
               LOGIN SECTION
               FORGOT PASSWORD SECTION
               ------------------------------------------*@
               <div id="div-forgot-pwd" style="display: none">
                  <div id="div-email" class="input-group mb-3" data-toggle="tooltip" data-placement="right"
                     title="Please enter Email Address...">
                     <div class="input-group-prepend">
                        <div class="input-group-text">
                           E-Mail
                        </div>
                     </div>
                     @Html.TextBoxFor(model => model.Email, new { @id = "email", @class = "form-control" })
                  </div>
                  @*-------------- INPUT SECTION ---------------*@ @*-------------- CONTROL SECTION ---------------*@
                  <div class="btn-group mb-3">
                     <input id="send-email" value="Send e-mail" class="btn btn-success btn-sm" style="padding: 5px;
                        margin-right: 10px; width: 100px;" />
                     <input id="close-modal-2" value="Close" class="btn btn-danger btn-sm" style="padding: 5px;
                        margin-left: 10px; width: 100px;" />
                  </div>
                  <input id="goto-login" value="Go to Login" class="btn btn-primary btn-sm" />
                  @*-------------- CONTROL SECTION ---------------*@
               </div>
               @*---------------------------------------------
               FORGOT PASSWORD SECTION 
               SET PASSWORD SECTION
               ----------------------------------------------*@
               <div id="div-set-pwd" style="display: none">
                  <div id="div-password-1" class="input-group" data-toggle="tooltip" data-placement="right"
                     title="Please enter Password...">
                     <div class="input-group-prepend">
                        <div class="input-group-text">
                           Enter Password
                        </div>
                     </div>
                     @Html.TextBoxFor(model => model.Password, new { @id = "password-1", @class = "form-control", @required = "required", @type = "password" })
                  </div>
                  <div id="div-password-2" class="input-group" data-toggle="tooltip" data-placement="right"
                     title="Please confirm Password...">
                     <div class="input-group-prepend">
                        <div class="input-group-text">
                           Confirm Password
                        </div>
                     </div>
                     @Html.PasswordFor(model => model.Password, new { @id = "password-2", @class = "form-control", @required = "required", @type = "password" })
                  </div>
                  @*--------------------------------------------
                  INPUT SECTION
                  CONTROL SECTION
                  ---------------------------------------------*@
                  <div class="btn-group mb-3">
                     <input id="set-pwd" value="Set Password" class="btn btn-primary btn-sm" style="padding: 5px;
                        margin-right: 10px; width: 100px;" />
                     <input id="close-modal-3" value="Close" class="btn btn-danger btn-sm" style="padding: 5px;
                        margin-left: 10px; width: 100px;" />
                  </div>
                  <input id="goto-login-2" value="Go To Login" class="btn btn-primary btn-sm" />
                  @*-------------- CONTROL SECTION ---------------*@
               </div>
            </div>
         </center>
      </div>
   </div>
}
