@{
    Layout = null;
}

@model LMS.Models.RoleMaster
@{
    ViewBag.Title = "Add Role";
}

@using (Html.BeginForm("Index", "RoleMaster", 
   FormMethod.Post, new { onSubmit = "return jQueryAjaxPost(this);", 
      data_restUrl = Url.Action("InsertUpdateOrDelete", "RoleMaster", new { id=0 }) }))   //data-resetUrl
{
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class = "control-label" })
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Name)
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary"  />
        <input type="reset" value="Reset" class="btn btn-danger" />
    </div>
}
@section Scripts {
   @Scripts.Render("~/bundles/jquery")
   @Scripts.Render("~/bundles/jqueryval")
}
